<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="5-create-reservation" author="java-boy">
        <createTable tableName="reservations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="slot_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="reserved_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="deleted" type="boolean">
                <constraints nullable="false"/>
            </column>

        </createTable>
        <addForeignKeyConstraint
                baseTableName="reservations"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_reservation_user"/>

        <addForeignKeyConstraint
                baseTableName="reservations"
                baseColumnNames="slot_id"
                referencedTableName="available_slots"
                referencedColumnNames="id"
                constraintName="fk_reservation_slot"/>
    </changeSet>
</databaseChangeLog>